<resources>

    <style name="Widget.FicusRebuild.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.FicusRebuild.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MyExpandedTitle" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/vfont</item>
        <item name="android:fontFamily">@font/vfont</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="MyCollapsedTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/vfont</item>
        <item name="android:fontFamily">@font/vfont</item>
        <item name="fontStyle">normal</item>
    </style>
</resources>