<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:liftOnScroll="true"
        app:liftOnScrollColor="?attr/colorSurfaceContainer"
        app:liftOnScrollTargetViewId="@id/nestedScrollView">

        <Button
            android:id="@+id/back_button"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:icon="@drawable/arrow_back" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            app:layout_scrollEffect="compress">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/person_avatar_background"
                android:layout_width="89dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="?attr/colorOnSurfaceVariant"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:srcCompat="@drawable/account_circle_filled"
                app:strokeColor="?attr/colorSurface"
                app:strokeWidth="16dp"
                app:tint="?attr/colorSurfaceContainer" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/person_avatar_placeholder"
                android:layout_width="89dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:visibility="visible"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:strokeColor="?attr/colorSurface"
                app:strokeWidth="16dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Bdfyjd Bdfy Bdfyjdbx"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/person_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:autoLink="email"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:lines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="test@mail.ru"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="?attr/colorSurface"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="24dp"
            android:showDividers="middle|beginning|end">

            <Button
                android:id="@+id/button_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Персональный сайт"
                app:cornerRadius="@dimen/corner_radius"
                app:icon="@drawable/open_in_new"
                app:iconSize="24dp" />

            <Button
                android:id="@+id/button_sсhedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorTertiary"
                android:padding="20dp"
                android:text="Расписание сотрудника"
                android:textColor="?attr/colorOnTertiary"
                app:icon="@drawable/ic_schedule"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnTertiary" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:showDividers="middle"
        android:visibility="gone"
        tools:showIn="@layout/fragment_news">

        <TextView
            android:id="@+id/error_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="Не удалось загрузить данные"
            android:textSize="16sp" />

        <Button
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Повторить попытку" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>